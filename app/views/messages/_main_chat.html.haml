.chat-main
  .main-header
    .main-header__group
      %p.main-header__group__name
        test
      %ul.main-header__group__member
        %li.main-header__group__member__members
          Member : 
        %li.main-header__group__member__list
          masa
    .main-header__edit
      = link_to "#",class: "btn" do
        Edit
  .message
    .message__box
      .message__box__info
        %p.message__box__info__talker
          masa
        %p.message__box__info__date
          2020/2/23(sun)13:20:00
      %p.message__box__text
        おはよう
    .message__box
      .message__box__info
        %p.message__box__info__talker
          masa
        %p.message__box__info__date
          2020/2/23(sun)13:20:00
      %p.message__box__text
        おはよう

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input_box__text', placeholder: 'type a message'
      .input_box
        = f.label :image, class: 'input__box__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'input_box__image__file'
      = f.submit 'Send', class: 'submit-btn'